<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<title>Events</title>
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<link rel="stylesheet" href="/public/style.css">
	</head>

	<body>
		<h1 class="title">Hobbyt</h1>
		<h2 class="sub-title">All events</h1>

		<div class="eventsPageContainers">
			<div class="eventsLeftContainer">
				<form action="/item/" method="post">
					<div class="eventsInputField" >
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							<input class="mdl-textfield__input" name="name" type="text">
							<label class="mdl-textfield__label" for="name">Event name?</label>
						</div>
					</div>
					<div class="eventsInputField">
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							<input class="mdl-textfield__input" name="location" type="text">
							<label class="mdl-textfield__label" for="location">Where?</label>
						</div>
					</div>
					<div class="eventsInputField">
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							<input class="mdl-textfield__input" name="activity" type="text">
							<label class="mdl-textfield__label" for="activity">What activity?</label>
						</div>
					</div>
					<div class="eventsInputField">
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							<input class="mdl-textfield__input" name="img" type="text">
							<label class="mdl-textfield__label" for="img">Add image url</label>
						</div>
					</div>

					<div class="eventAddButton">
						<button class="myButton mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Add Event</button>
					</div>
				</form>
			</div>

			<div class="eventsRightContainer">
				<div class="tableContainer">
				   <table class="mdl-data-table">
					
					<thead>
						<tr>
							<th class="mdl-data-table__cell--non-numeric">Event name</th>
							<th class="mdl-data-table__cell--non-numeric">Time</th>
							<th class="mdl-data-table__cell--non-numeric">Location</th>
							<th class="mdl-data-table__cell--non-numeric">Activity Type</th>
							<th class="mdl-data-table__cell--non-numeric">Image</th>
							<th class="mdl-data-table__cell--non-numeric">Edit</th>
							<th class="mdl-data-table__cell--non-numeric">Delete</th>
						</tr>
					</thead>
					
					<tbody>
					
						<% events.forEach(function(event){ %>
						<tr>
						
							<!-- DATA -->
							<td class="mdl-data-table__cell--non-numeric"><%= event.name %></td>
							<td class="mdl-data-table__cell--non-numeric"><%= event.time %></td>
							<td class="mdl-data-table__cell--non-numeric"><%= event.location %></td>
							<td class="mdl-data-table__cell--non-numeric"><%= event.activity %></td>
							
							<!-- ACTIONS -->
							<td class="mdl-data-table__cell--non-numeric">
								<a href="<%= event.img %>" class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored" target="_blank">
									<div class="material-icons md-dark">image</div>
								</a>
							</td>
							
							<td class="mdl-data-table__cell--non-numeric">
								<div class="mdl-button mdl-js-button mdl-button--icon">
									<i id="<%= event.id%>" class="material-icons md-dark edit">mode_edit</i>
								</div>
							</td>
							
							<td class="mdl-data-table__cell--non-numeric">
								<div class="mdl-button mdl-js-button mdl-button--icon">
									<i id="<%= event.id%>" class="material-icons md-dark delete">delete</i>
								</div>
							</td>
							
						</tr>
						<% }); %>
						
					</tbody>
				   </table>
				</div>

				<% events.forEach(function(event){ %>
				<div class="gallery">
					<a target="_blank" href="<%= event.img %>">
						<img src="<%= event.img %>">
					</a>
					<div class="eventDescription"><%= event.name %></div>
				</div>
				<% }); %>

			</div>

		</div>

		<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
		<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-blue.min.css"/>
		<script type="text/javascript" src="/public/script.js"></script>
		<script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
	</body>

</html>